pipeline {
    agent any

    stages {
        stage('Initializing Maven') {
            steps {
                sh 'mvn initialize'
            }
        }
        stage ('Building the app 119 ...'){
            steps {
                sh 'mvn clean package'
            }
        }
        stage ('Running Regression tests ...'){
            steps {
                sh 'mvn test'
                sh 'ls'
            }
        }
        stage ('Execute ansible playbook'){
            steps {
                sh 'pwd'
                ansiblePlaybook credentialsId: 'user-pass', installation: 'ansible', inventory: 'inventory.yml', playbook: 'JavaCalc-play.yaml'
            }
        }
    }
}
