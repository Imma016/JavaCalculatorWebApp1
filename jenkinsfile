pipeline {
    agent any

    stages {
        stage('Initializing Maven') {
            steps {
                sh 'mvn initialize'
            }
        }
        stage ('Building the app 119 ...'){
            steps {
                // sh 'mvn clean package'
                echo 'Debugging'
            }
        }
        stage ('Running Regression tests ...'){
            steps {
                // sh 'mvn test'
                echo 'debugging'
            }
        }
        stage ('Execute ansible playbook'){
            steps {
                sh 'whoami'
                ansiblePlaybook disableHostKeyChecking: true, installation: 'ansible', inventory: 'inventory.yml', playbook: 'pingHosts-playbook.yml'
            }
        }
    }
}
