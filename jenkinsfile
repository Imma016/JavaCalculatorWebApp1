            }
        }
        stage ('Building the app 119 ...'){
            steps {
                // sh 'mvn clean package'
                echo 'Debugging'
            }
        }
        stage ('Running Regression tests ...'){
            steps {
                // sh 'mvn test'
                echo 'debugging'
            }
        }
        stage ('Execute ansible playbook'){
            steps {
                ansiblePlaybook become: true, credentialsId: 'key', disableHostKeyChecking: true, installation: 'ansible', inventory: 'inventory.yml', playbook: 'pingHosts-Playbook.yml'
            }
        }
    }
}
